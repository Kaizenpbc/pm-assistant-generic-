{
  "name": "pm-assistant-generic",
  "version": "1.0.0",
  "description": "AI-Powered Project Management Application - Hybrid AI PM with action-taking co-pilot",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix-colors \"bgBlue.bold,bgGreen.bold\" --names \"SERVER,CLIENT\" \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --config nodemon.json",
    "client:dev": "cd src/client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "cd src/client && npm run build",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "test:unit": "vitest run",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx src/server/database/migrate.ts",
    "db:seed": "tsx src/server/database/seed.ts"
  },
  "keywords": [
    "project-management",
    "ai",
    "fastify",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.2.0",
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "esbuild": "^0.27.3",
    "fastify": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.1",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "uuid": "^11.1.0",
    "winston": "^3.19.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  }
}
